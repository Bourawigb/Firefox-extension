{
  "manifest_version": 2,
  "name": "XSS Blocker",
  "version": "1.0",
  "description": "Blocks XSS attacks detected in web pages.",
  "permissions": ["tabs","<all_urls>", "activeTab", "webRequest", "webRequestBlocking"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "../icons/icon48.png"
    },
    "default_title": "XSS Blocker",
    "default_popup": "popup.html"
  }
}
